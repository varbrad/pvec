{
  "name": "pvec",
  "version": "0.0.2",
  "description": "JavaScript port of the Processing PVector class.",
  "main": "./build/pvec.common.js",
  "module": "./build/pvec.js",
  "types": "./build/pvec.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/varbrad/pvec.git"
  },
  "scripts": {
    "build": "npm run build:ts && npm run build:cjs",
    "build:ts": "tsc",
    "build:cjs": "rollup ./build/pvec.js -o ./build/pvec.common.js --format cjs",
    "lint": "standard --fix",
    "test": "npm run lint && mocha"
  },
  "keywords": [
    "vector",
    "processing",
    "pvec",
    "pvector",
    "point"
  ],
  "author": "Brad Davies",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/varbrad/pvec/issues"
  },
  "homepage": "https://github.com/varbrad/pvec#readme",
  "devDependencies": {
    "mocha": "^3.2.0",
    "rollup": "^0.41.4",
    "standard": "^9.0.0",
    "typescript": "^2.2.1"
  },
  "standard": {
    "ignore": [
      "/build"
    ]
  }
}
