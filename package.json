{
  "name": "pvec",
  "version": "0.0.1",
  "description": "JavaScript port of the Processing PVector class.",
  "main": "build/pvec.cjs.js",
  "module": "build/pvec.esm.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/varbrad/pvec.git"
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "rollup ./src/main.js -o ./build/pvec.esm.js --format es",
    "build:cjs": "rollup ./src/main.js -o ./build/pvec.cjs.js --format cjs",
    "lint": "standard --fix"
  },
  "keywords": [
    "vector",
    "processing",
    "pvec",
    "pvector",
    "point"
  ],
  "author": "Brad Davies",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/varbrad/pvec/issues"
  },
  "homepage": "https://github.com/varbrad/pvec#readme",
  "devDependencies": {
    "rollup": "^0.41.4",
    "standard": "^9.0.0"
  },
  "standard": {
    "ignore": [
      "/build"
    ]
  }
}
